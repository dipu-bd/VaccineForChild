<form id="addDoseForm" method="post" action="javascript:null;">
    <div class="hidden">
        <input type="number" name="id" title="ID">
        <input type="number" name="vaccine" title="Vaccine">
    </div>
    <div class="form-group">
        <label class="control-label">Dose name:</label>
        <input type="text" class="form-control" name="name" placeholder="Name of the dose">
    </div>
    <div class="form-group">
        <label class="control-label">Applicable time after birth (in days):</label>
        <input type="number" class="form-control" name="dab" min="0" placeholder="Days after birth">
    </div>
    <div class="form-group">
        <label class="control-label">Valid range to apply (in days):</label>
        <input type="number" class="form-control" name="period" min="1" placeholder="Range to apply dose">
    </div>
    <div class="modal-footer">
        <!-- form output -->
        <div class="text-center text-info well-sm" id="error-box"></div>
        <!-- modal buttons -->
        <input type="submit" class="btn btn-primary btn-block" value="Add Dose"/>
    </div>
</form>
