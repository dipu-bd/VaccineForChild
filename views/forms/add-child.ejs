<form id="addChildForm" method="post" action="javascript:null;">
    <div class="hidden">
        <input type="number" name="id" title="ID">
    </div>
    <div class="form-group">
        <label class="control-label">Child Name:</label>
        <input type="text" class="form-control" name="name" placeholder="Name of your child">
    </div>
    <div class="form-group">
        <label class="control-label">Birthday:</label>
        <select class="form-control" name='year' title="Year"></select>
        <select class="form-control" name='month' title="Month"></select>
        <select class="form-control" name='day' title="Day" id="date-data"></select>
    </div>
    <div class="form-group">
        <label class="control-label">Gender:</label>
        <select name="gender" title="Gender" class="form-control">
            <option value="male">Male</option>
            <option value="female">Female</option>
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Height (ignore if you do not know):</label>
        <div class="input-group">
            <input type="number" class="form-control" name="height" min="0" max="500" placeholder="Height of the child">
            <span class="input-group-addon">inches</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Weight (ignore if you do not know):</label>
        <div class="input-group">
            <input type="number" class="form-control" name="weight" min="0" max="100" placeholder="Weight of the child">
            <span class="input-group-addon">kg</span>
        </div>
    </div>
    <div class="modal-footer">
        <!-- form output -->
        <div class="text-center text-info well-sm" id="error-box"></div>
        <!-- modal buttons -->
        <input type="submit" class="btn btn-primary btn-block" value="Add Child"/>
    </div>
</form>
